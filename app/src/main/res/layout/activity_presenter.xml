<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kamal.saqib.eventmanager.PresenterActivity">

    <Button
        android:id="@+id/bt_myactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="My event" />

    <Button
        android:id="@+id/bt_allactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt_myactivity"
        android:layout_alignStart="@+id/bt_myactivity"
        android:layout_below="@+id/bt_myactivity"
        android:layout_marginTop="23dp"
        android:text="All event" />


    <Button
        android:id="@+id/bt_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bt_allactivity"
        android:layout_alignRight="@+id/bt_allactivity"
        android:layout_below="@+id/bt_allactivity"
        android:text="Logout" />

</RelativeLayout>
